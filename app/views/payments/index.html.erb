<h1>Payment</h1> 

<form>
  <h4>Credit Card Information<h4> 
    Credit Card Number:<br>
      <input type="text" name="creditcardinformation">
        <select name="creditcards">
          <option value="visa">Visa</option>
          <option value="mastercard">Master Card</option>
          <option value="ae">American Express</option>
        </select>
    <br>
    Expiry Date:<br>
      <input type="text" name="expirydate">
  <br><br>

  <input type="submit" value="CHECK">


  <h4>Shipping Address</h4>
    Street name:<br>
      <input type="text" name="streetname">
  <br>
    City:<br>
      <input type="text" name="city">
  <br>
    Country:<br>
    <input type="text" name="country">
  <br>
    Postal Code:<br> 
      <input type="text" name="postalcode">


  <br><br>
  <input type="submit" value="SUBMIT">
</form>

</body> 

<% if false %>
<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
<% end %>