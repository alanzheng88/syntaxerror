<body>

<div class="title">
  <h1>Administration</h1>
</div>

<div class="container">
  <div id="role-assignment">
    <form>
      <h4><label for="username">Assign role to user</label></h4>
    	<input type="text" id="username" name="Username" placeholder="Username">
    	<select>
    		<option value="vendor_admin">Vendor Admin</option>
    		<option value="vendor_manager">Vendor Manager</option>
    	</select>	
    	<input type="submit" value="Assign Role">
      <p>
        <%= link_to "list of all users and roles", users_path %>
      </p>
    </form>
  </div>

  <div id="user-role-assigned-table">
    <table border="2">
      <thead>
        <tr>
          <td>ID</td>
          <td>Name</td>
          <td>Role</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>123456</td>
          <td>Alan Zheng</td>
          <td>Vendor Manager</td>
          <td>Delete</td>
        </tr>
      </tbody>
    </table>
  </div>

</div>

</body>

<% if false %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administrations.each do |administration| %>
      <tr>
        <td><%= link_to 'Show', administration %></td>
        <td><%= link_to 'Edit', edit_administration_path(administration) %></td>
        <td><%= link_to 'Destroy', administration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Administration', new_administration_path %>
<% end %>
