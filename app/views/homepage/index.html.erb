<body>

<div class="header">

	<div class="user-info">
		<form action="/" method="post">
			<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>

			<% if @isAuthenticated %>
				<ul>
					<li><%= @user.name %></li>
					<li><%= @user.role %></li>
				</ul>
			<% else %>
				<table>
					<tr>
						<td><input type="input" name="username" placeholder="username"></td>
					</tr>
					<tr>
						<td><input type="password" name="password" placeholder="password"></td>
					</tr>
					<tr>
						<td><input type="input" name="role" placeholder="this is here to test roles"></td>
					</tr>
					<tr>
						<td><input type="submit" value="Sign In"></td>
					</tr>
				</table>
			<% end %>
		</form>
	</div>

	<% if @isAuthenticated %>
		<div class="navigation-bar">
			<ul>
				<% if @user.role == "Site Administrator" || @user.role == "Vendor Administrator" %>
					<li><%= link_to "Administration", administration_path %></li>
				<% end %>
				<% if @user.role != "Customer" %>
					<li>Product Management</li>
				<% end %>
				<% if @user.role != "Customer" %> 
					<li><%= link_to "Products", product_listings_path %></li>
				<% end %>
				<li>Purchase History</li>
			</ul>
		</div>
	<% end %>

</div>

